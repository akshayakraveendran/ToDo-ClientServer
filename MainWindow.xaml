<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="To-Do Client" Height="450" Width="500">
    <DockPanel Margin="8">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBox x:Name="NewItemTextBox" Width="360" Height="28" VerticalAlignment="Center" Margin="0,0,8,0" />
            <Button Content="Add" Width="80" Click="AddButton_Click"/>
        </StackPanel>

        <ListView x:Name="ItemsListView" DockPanel.Dock="Bottom">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <DockPanel Margin="4">
                        <CheckBox Width="24" IsChecked="{Binding Completed}" Click="CheckBox_Click" />
                        <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Margin="8,0,0,0" VerticalAlignment="Center" />
                    </DockPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </DockPanel>
</Window>
